{
  "formatting": ["h3", "p"],
  "formattingAdd": {
    "button": {
      "title": "Button",
      "api": "module.block.format",
      "args": {
        "tag": "a",
        "class": "button -black"
      }
    }
  },
  "buttons": ["formatting", "lists", "link", "html"],
  "plugins": ["fullscreen", "alignment"],
  "toolbarFixed": true,
  "linkNewTab": true,
  "pasteInlineTags": ["a", "img", "strong", "ins", "code", "del", "span", "samp", "kbd", "sup", "sub", "mark", "var", "cite", "small", "b", "u", "em", "i"]
}
